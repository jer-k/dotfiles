// Custom Zed keymap - JetBrains-inspired
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // Navigation
      "shift shift": "project_symbols::Toggle",
      "cmd-shift-o": "file_finder::Toggle",
      "cmd-e": ["projects::OpenRecent", { "create_new_window": false }],
      "cmd-shift-a": "agent::ToggleFocus",
      
      // Tool windows
      "cmd-t": "terminal_panel::ToggleFocus",
      
      // Search
      "cmd-shift-f": "pane::DeploySearch",
      "cmd-shift-r": ["pane::DeploySearch", {"replace_enabled": true}]
    }
  },
  {
    "context": "AgentPanel",
    "bindings": {
      "cmd-shift-a": "workspace::ToggleRightDock",
      "cmd-shift-c": "agent::ToggleContextPicker"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // Navigation
      "cmd-shift-o": "file_finder::Toggle",
      "cmd-b": "editor::GoToDefinition",
      "cmd-alt-b": "editor::GoToImplementation",
      "cmd-u": "editor::UndoSelection",
      "cmd-shift-b": "editor::GoToTypeDefinition",
      "cmd-alt-left": "pane::GoBack",
      "cmd-alt-right": "pane::GoForward",
      "cmd-g": "go_to_line::Toggle",
      "cmd-shift-g": "go_to_line::Toggle",
      "cmd-shift-i": "outline::Toggle",
      
      // Selection
      "cmd-w": "editor::SelectLargerSyntaxNode",
      "cmd-shift-w": "editor::SelectSmallerSyntaxNode",
      "cmd-d": ["editor::SelectNext", { "replace_newest": false }],
      "cmd-shift-d": ["editor::SelectPrevious", { "replace_newest": false }],
      "cmd-ctrl-g": "editor::SelectAllMatches",
      "alt-up": "editor::MoveLineUp",
      "alt-down": "editor::MoveLineDown",
      
      // Editing
      "cmd-shift-enter": "editor::NewlineAbove",
      "cmd-enter": "editor::NewlineBelow",
      "cmd-shift-j": "editor::JoinLines",
      "cmd-/": ["editor::ToggleComments", { "advance_downwards": false }],
      "cmd-alt-l": "editor::Format",
      "cmd-shift-u": "editor::RedoSelection",
      "cmd-shift-up": "editor::MoveLineUp",
      "cmd-shift-down": "editor::MoveLineDown",
      "cmd-backspace": "editor::DeleteToBeginningOfLine",
      "alt-backspace": "editor::DeleteToPreviousWordStart",
      "alt-delete": "editor::DeleteToNextWordEnd",
      
      // Code actions
      "alt-enter": "editor::ToggleCodeActions",
      "cmd-shift-l": "editor::Format",
      "f2": "editor::Rename",
      
      // Search and replace
      "cmd-f": "buffer_search::Deploy",
      "cmd-r": "buffer_search::DeployReplace",
      "f3": "search::SelectNextMatch",
      "shift-f3": "search::SelectPreviousMatch",
      "cmd-shift-f": "pane::DeploySearch",
      
      // Folding
      "cmd-plus": "editor::UnfoldLines",
      "cmd-minus": "editor::Fold",
      "cmd-shift-plus": "editor::UnfoldAll",
      "cmd-shift-minus": "editor::FoldAll",
      
      // Multiple cursors
      "cmd-alt-up": "editor::AddSelectionAbove",
      "cmd-alt-down": "editor::AddSelectionBelow",
      "cmd-shift-l": "editor::SelectAllMatches"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "enter": "project_panel::Open",
      "cmd-n": "project_panel::NewFile",
      "alt-cmd-n": "project_panel::NewDirectory",
      "delete": ["project_panel::Trash", { "skip_prompt": false }],
      "f2": "project_panel::Rename",
      "cmd-k": "project_panel::CollapseAllEntries"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-k": "terminal::Clear",
      "cmd-t": "workspace::NewTerminal"
    }
  }
]

