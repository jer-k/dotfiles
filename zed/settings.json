// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "colorize_brackets": true,
  "show_edit_predictions": false,
  "agent": {
    "default_profile": "ask",
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    }
  },
  "theme": "Solarized Black",
  "ui_font_size": 16,
  "buffer_font_size": 16.0,
  "preferred_line_length": 125,
  "autosave": "on_focus_change",
  "tab_size": 2,
  "hard_tabs": false,
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "erb": "html",
          "ruby": "html"
        }
      }
    },
    "solargraph": {
      "initialization_options": {
        "diagnostics": false,
        "formatting": false
      }
    },
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false,
          "onTypeFormatting": false
        }
      }
    }
  },
  "languages": {
    "TypeScript": {
      "language_servers": ["typescript-language-server", "biome", "!vtsls"],
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "TSX": {
      "language_servers": ["typescript-language-server", "biome", "tailwindcss-language-server", "!vtsls"],
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "Ruby": {
      "language_servers": ["ruby-lsp", "rubocop"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "./bin/rubyfmt-main"
        }
      }
    },
    "SQL": {
      "prettier": {
        "allowed": true,
        "plugins": ["prettier-plugin-sql"],
        "parser": "postgresql",
        "options": {
          "language": "postgresql"
        }
      }
    }
  },
  "file_scan_exclusions": ["*.git", "*.DS_Store"]
}
